            <BoxView BackgroundColor="Gray" AbsoluteLayout.LayoutBounds="1, 1, 100, 30" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <BoxView BackgroundColor="Gray" AbsoluteLayout.LayoutBounds="1, 1, 30, 100" AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <BoxView BackgroundColor="Gray" AbsoluteLayout.LayoutBounds="0, 0.5 , 100, 30" AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <BoxView BackgroundColor="Gray" AbsoluteLayout.LayoutBounds="0, 0.5 , 30, 100" AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <BoxView BackgroundColor="Gray" AbsoluteLayout.LayoutBounds="1, 0.5 , 100, 30" AbsoluteLayout.LayoutFlags="PositionProportional"/>
